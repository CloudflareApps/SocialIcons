{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./social-sharing-icons.js"
      },
      {
        "type": "script",
        "contents": "SocialSharingIcons.init(OPTIONS.container.create(), OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "container": {
        "title": "Location",
        "type": "object",
        "format": "element"
      },
      "color": {
        "title": "Color",
        "type": "string",
        "format": "color",
        "default": "auto"
      },
      "size": {
        "title": "Size",
        "type": "string",
        "default": "3em"
      },
      "icons": {
        "title": "Icons",
        "type": "object",
        "properties": {
          "facebook": {
            "title": "Facebook",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean"
              },
              "username": {
                "title": "Username",
                "type": "string"
              }
            }
          },
          "twitter": {
            "title": "Twitter",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean"
              },
              "username": {
                "title": "Handle",
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
