{
  "title": "Social Sharing Icons",
  "description": "Social sharing icon links for a website.",
  "include": {
    "afterBody": [
      {
        "tag": "script",
        "src": "./social-sharing-icons.js"
      },
      {
        "tag": "script",
        "contents": "SocialSharingIcons.render(ELEMENT, OPTIONS)"
      }
    ]
  },
  "element": {
    "allowSelector": "*"
  },
  "options": {
    "properties": {
      "color": {
        "title": "Color",
        "type": "string",
        "format": "color",
        "default": "auto"
      },
      "icons": {
        "title": "Icons",
        "type": "object",
        "properties": {
          "facebook": {
            "title": "Facebook",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean"
              },
              "username": {
                "title": "Username",
                "type": "string"
              }
            }
          },
          "twitter": {
            "title": "Twitter",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean"
              },
              "username": {
                "title": "Handle",
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
