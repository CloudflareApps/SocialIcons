{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./social-icons.js"
      },
      {
        "type": "script",
        "contents": "SocialIcons.init(Eager.createElement(INSTALL_OPTIONS.container), INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "container": {
        "title": "Location",
        "type": "object",
        "format": "element"
      },
      "color": {
        "title": "Color",
        "type": "string",
        "format": "color",
        "default": "auto"
      },
      "size": {
        "title": "Size",
        "type": "string",
        "enum": [
          "1em",
          "2em",
          "3em",
          "4em",
          "5em"
        ],
        "enumNames": {
          "1em": "Tiny",
          "2em": "Small",
          "3em": "Normal",
          "4em": "Large",
          "5em": "Huge"
        },
        "default": "3em"
      },
      "icons": {
        "title": "Icons",
        "type": "object",
        "properties": {
          "facebook": {
            "title": "Facebook",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": true
              },
              "username": {
                "title": "Username",
                "type": "string"
              }
            }
          },
          "twitter": {
            "title": "Twitter",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": true
              },
              "username": {
                "title": "Username",
                "type": "string"
              }
            }
          },
          "github": {
            "title": "Github",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "title": "Username",
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
