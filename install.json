{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./build/app.js"
      },
      {
        "type": "style",
        "src": "./build/app.css"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["color", "container", "position", "services"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      },
      {
        "options": ["size"],
        "execute": "INSTALL_SCOPE.setSize(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "color": {
        "order": 1,
        "title": "Color",
        "type": "string",
        "format": "color",
        "default": "auto"
      },
      "size": {
        "order": 2,
        "title": "Size",
        "type": "number",
        "format": "slider",
        "minimum": 1,
        "maximum": 5,
        "step": 0.5,
        "default": "3"
      },
      "container": {
        "order": 3,
        "title": "Location",
        "description": "Select where you want the icons to be added to your site.",
        "type": "object",
        "format": "element"
      },

      "position": {
        "order": 4,
        "title": "Horizontal alignment",
        "type": "string",
        "default": "center",
        "enum": [
          "left",
          "center",
          "right"
        ],
        "enumNames": {
          "left": "Left",
          "center": "Center",
          "right": "Right"
        }
      },

      "services": {
        "order": 5,
        "title": "Icons",
        "description": "Check the icons youâ€™d like to add.",
        "type": "object",
        "properties": {
          "facebook": {
            "order": 1,
            "title": "Facebook",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": true
              },
              "username": {
                "showIf": {
                  "services.facebook.enabled": true
                },
                "title": "Username",
                "description": "As in facebook.com/<strong>username</strong>",
                "type": "string"
              }
            }
          },
          "twitter": {
            "order": 2,
            "title": "Twitter",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "showIf": {
                  "services.twitter.enabled": true
                },
                "title": "Username",
                "description": "As in twitter.com/<strong>username</strong>",
                "type": "string"
              }
            }
          },
          "github": {
            "order": 3,
            "title": "Github",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "showIf": {
                  "services.github.enabled": true
                },
                "title": "Username",
                "description": "As in github.com/<strong>username</strong>",
                "type": "string"
              }
            }
          },
          "linkedin": {
            "order": 4,
            "title": "LinkedIn",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "showIf": {
                  "services.linkedin.enabled": true
                },
                "title": "Username",
                "description": "As in linkedin.com/in/<strong>username</strong>",
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
